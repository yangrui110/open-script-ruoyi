<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.script.mapper.ScriptCardMapper">

	<resultMap type="ScriptCard" id="ScriptCardResult">
		<id     property="id"            column="id"           />
		<result property="cardNo"        column="card_no"      />
		<result property="expireDay"     column="expire_day"   />
		<result property="price"         column="price"        />
		<result property="expireTime"    column="expire_time"  />
		<result property="deviceSize"    column="device_size"  />
		<result property="status"        column="status"       />
		<result property="delFlag"       column="del_flag"     />
		<result property="loginIp"       column="login_ip"     />
		<result property="loginDate"     column="login_date"   />
		<result property="createDept"    column="create_dept"  />
		<result property="createBy"      column="create_by"    />
		<result property="createTime"    column="create_time"  />
		<result property="updateBy"      column="update_by"    />
		<result property="updateTime"    column="update_time"  />
		<result property="remark"        column="remark"       />
	</resultMap>
	
	<sql id="selectScriptCardVo">
        select id, card_no, expire_day, price, expire_time, device_size, status, del_flag, login_ip, login_date, create_dept, create_by, create_time, update_by, update_time, remark 
		from script_card
    </sql>
	
	<select id="selectScriptCardList" parameterType="ScriptCard" resultMap="ScriptCardResult">
	    <include refid="selectScriptCardVo"/>
		<where>
		    del_flag = '0'
			<if test="cardNo != null and cardNo != ''">
				AND card_no like concat('%', #{cardNo}, '%')
			</if>
			<if test="status != null and status != ''">
				AND status = #{status}
			</if>
			<if test="deviceSize != null and deviceSize != ''">
				AND device_size = #{deviceSize}
			</if>
			<if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
				AND date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
				AND date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
		</where>
		order by create_time desc
	</select>
	
	<select id="selectScriptCardAll" resultMap="ScriptCardResult">
		<include refid="selectScriptCardVo"/>
		where del_flag = '0'
		order by create_time desc
	</select>
	
	<select id="selectScriptCardById" parameterType="Long" resultMap="ScriptCardResult">
		<include refid="selectScriptCardVo"/>
		where id = #{id}
	</select>
	
	<select id="selectScriptCardByCardNo" parameterType="String" resultMap="ScriptCardResult">
		<include refid="selectScriptCardVo"/>
		where card_no = #{cardNo} and del_flag = '0'
	</select>
	
	<select id="checkCardNoUnique" parameterType="String" resultMap="ScriptCardResult">
		<include refid="selectScriptCardVo"/>
		where card_no = #{cardNo} and del_flag = '0' limit 1
	</select>
	
	<update id="updateScriptCard" parameterType="ScriptCard">
 		update script_card
 		<set>
 			<if test="cardNo != null and cardNo != ''">card_no = #{cardNo},</if>
 			<if test="expireDay != null">expire_day = #{expireDay},</if>
 			<if test="price != null">price = #{price},</if>
 			<if test="expireTime != null">expire_time = #{expireTime},</if>
 			<if test="deviceSize != null and deviceSize != ''">device_size = #{deviceSize},</if>
 			<if test="status != null and status != ''">status = #{status},</if>
 			<if test="delFlag != null and delFlag != ''">del_flag = #{delFlag},</if>
 			<if test="loginIp != null and loginIp != ''">login_ip = #{loginIp},</if>
 			<if test="loginDate != null">login_date = #{loginDate},</if>
 			<if test="remark != null">remark = #{remark},</if>
 			<if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
 			update_time = sysdate()
 		</set>
 		where id = #{id}
	</update>
 	
 	<insert id="insertScriptCard" parameterType="ScriptCard" useGeneratedKeys="true" keyProperty="id">
 		insert into script_card(
 			<if test="id != null and id != 0">id,</if>
 			<if test="cardNo != null and cardNo != ''">card_no,</if>
 			<if test="expireDay != null">expire_day,</if>
 			<if test="price != null">price,</if>
 			<if test="expireTime != null">expire_time,</if>
 			<if test="deviceSize != null and deviceSize != ''">device_size,</if>
 			<if test="status != null and status != ''">status,</if>
 			<if test="delFlag != null and delFlag != ''">del_flag,</if>
 			<if test="loginIp != null and loginIp != ''">login_ip,</if>
 			<if test="loginDate != null">login_date,</if>
 			<if test="createDept != null">create_dept,</if>
 			<if test="remark != null and remark != ''">remark,</if>
 			<if test="createBy != null and createBy != ''">create_by,</if>
 			create_time
 		)values(
 			<if test="id != null and id != 0">#{id},</if>
 			<if test="cardNo != null and cardNo != ''">#{cardNo},</if>
 			<if test="expireDay != null">#{expireDay},</if>
 			<if test="price != null">#{price},</if>
 			<if test="expireTime != null">#{expireTime},</if>
 			<if test="deviceSize != null and deviceSize != ''">#{deviceSize},</if>
 			<if test="status != null and status != ''">#{status},</if>
 			<if test="delFlag != null and delFlag != ''">#{delFlag},</if>
 			<if test="loginIp != null and loginIp != ''">#{loginIp},</if>
 			<if test="loginDate != null">#{loginDate},</if>
 			<if test="createDept != null">#{createDept},</if>
 			<if test="remark != null and remark != ''">#{remark},</if>
 			<if test="createBy != null and createBy != ''">#{createBy},</if>
 			sysdate()
 		)
	</insert>
	
	<update id="deleteScriptCardById" parameterType="Long">
		update script_card set del_flag = '1' where id = #{id}
	</update>
	
	<update id="deleteScriptCardByIds" parameterType="Long">
 		update script_card set del_flag = '1' where id in
 		<foreach collection="array" item="id" open="(" separator="," close=")">
 			#{id}
        </foreach> 
 	</update>

</mapper>